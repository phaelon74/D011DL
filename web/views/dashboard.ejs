<%- include('partials/header') %>

<div class="container">
    <h1>Dashboard</h1>
    <a href="/logout">Logout</a>

    <h2>Download Hugging Face Model</h2>
    <form action="/start-download" method="POST">
        <input type="text" name="authorRepo" placeholder="e.g., TheDrummer/Behemoth-X-123B-v2" required style="width: 300px;">
        <button type="submit">Download</button>
    </form>
    <div id="parsed-result"></div>
    <div id="tree-container"></div>

    <h2>Tracked Models</h2>
    <table>
        <thead>
            <tr>
                <th>Author</th>
                <th>Repo</th>
                <th>Revision</th>
                <th>Status / Progress</th>
                <th>Location(s)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% models.forEach(model => { %>
                <% const shouldDisplay = (model.locations && model.locations.length > 0) || (model.is_downloaded && (!model.locations || model.locations.length === 0)) || model.download_id; %>
                <% if (shouldDisplay) { %>
                    <tr>
                        <td><%= model.author %></td>
                        <td><%= model.repo %></td>
                        <td><%= model.revision %></td>
                        <td>
                            <span class="status-<%= model.status %>"><%= model.status || (model.is_downloaded ? 'succeeded' : 'pending') %></span>
                            <% if (model.status === 'running' && model.total_bytes > 0) { %>
                                <% const progress = ((model.bytes_downloaded / model.total_bytes) * 100).toFixed(2); %>
                                <div class="progress-bar">
                                    <div class="progress" style="width: <%= progress %>%;"></div>
                                </div>
                                <span>(<%= (model.bytes_downloaded / 1024 / 1024).toFixed(2) %> / <%= (model.total_bytes / 1024 / 1024).toFixed(2) %> MB)</span>
                            <% } %>
                        </td>
                        <td>
                            <% if (model.locations && model.locations.length > 0) { %>
                                <%= model.locations.join(', ') %>
                            <% } else if (model.is_downloaded) { %>
                                <%= model.root_path %> <!-- Fallback for older records -->
                            <% } %>
                        </td>
                        <td>
                             <% if (model.status === 'succeeded' || model.is_downloaded) { %>
                                <% const netPath = '/media/netmodels/' + model.author + '/' + model.repo + '/' + model.revision; %>
                                <% if (!model.locations || !model.locations.includes(netPath)) { %>
                                    <% if (model.locations && model.locations.includes(model.root_path)) { %>
                                        <form action="/copy-model/<%= model.id %>" method="POST" style="display: inline;">
                                            <button type="submit">Copy</button>
                                        </form>
                                        <form action="/move-model/<%= model.id %>" method="POST" style="display: inline;">
                                            <button type="submit">Move</button>
                                        </form>
                                    <% } %>
                                <% } %>
                                <a href="/delete-model/<%= model.id %>"><button>Delete</button></a>
                            <% } %>
                            <% if (model.status === 'failed' || model.status === 'running') { %>
                                <form action="/rescan-model/<%= model.id %>" method="POST" style="display: inline;">
                                    <button type="submit">Rescan</button>
                                </form>
                            <% } %>
                            <% if (model.status === 'failed') { %>
                                <div class="error-log" title="<%= model.log %>">?</div>
                                <form action="/retry-download/<%= model.download_id %>" method="POST" style="display: inline;">
                                    <button type="submit">Retry</button>
                                </form>
                            <% } %>
                        </td>
                    </tr>
                <% } %>
            <% }) %>
        </tbody>
    </table>
</div>

<div class="refresh-container">
    <label for="refreshInterval">Auto-refresh:</label>
    <select id="refreshInterval">
        <option value="0" selected>Off</option>
        <option value="5">5s</option>
        <option value="10">10s</option>
        <option value="15">15s</option>
        <option value="30">30s</option>
        <option value="60">60s</option>
    </select>
    <span id="refreshTimer"></span>
</div>

<%- include('partials/footer') %>
