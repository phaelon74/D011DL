<%- include('partials/header') %>

<div class="container">
    <h1>Dashboard</h1>
    <a href="/logout">Logout</a>

    <h2>Download Hugging Face Model</h2>
    <form action="/start-download" method="POST">
        <input type="text" name="authorRepo" placeholder="e.g., TheDrummer/Behemoth-X-123B-v2" required style="width: 300px;">
        <button type="submit">Download</button>
    </form>
    <div id="parsed-result"></div>
    <div id="tree-container"></div>

    <h2>Tracked Models</h2>
    <table>
        <thead>
            <tr>
                <th>Author</th>
                <th>Repo</th>
                <th>Revision</th>
                <th>Status</th>
                <th>Location(s)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% models.forEach(model => { %>
                <% const shouldDisplay = (model.locations && model.locations.length > 0) || (model.is_downloaded && (!model.locations || model.locations.length === 0)); %>
                <% if (shouldDisplay) { %>
                    <tr>
                        <td><%= model.author %></td>
                        <td><%= model.repo %></td>
                        <td><%= model.revision %></td>
                        <td>
                            <span class="status-<%= model.status %>"><%= model.status || 'Downloaded' %></span>
                        </td>
                        <td>
                            <% if (model.locations && model.locations.length > 0) { %>
                                <%= model.locations.join(', ') %>
                            <% } else { %>
                                <%= model.root_path %> <!-- Fallback for older records -->
                            <% } %>
                        </td>
                        <td>
                             <% if (model.status === 'succeeded' || model.is_downloaded) { %>
                                <% const netPath = '/media/netmodels/' + model.author + '/' + model.repo + '/' + model.revision; %>
                                <% if (!model.locations || !model.locations.includes(netPath)) { %>
                                    <form action="/copy-model/<%= model.id %>" method="POST" style="display: inline;">
                                        <button type="submit">Copy</button>
                                    </form>
                                    <form action="/move-model/<%= model.id %>" method="POST" style="display: inline;">
                                        <button type="submit">Move</button>
                                    </form>
                                <% } %>
                                <a href="/delete-model/<%= model.id %>"><button>Delete</button></a>
                            <% } %>
                            <% if (model.status === 'failed') { %>
                                <div class="error-log" title="<%= model.log %>">?</div>
                                <form action="/retry-download/<%= model.download_id %>" method="POST" style="display: inline;">
                                    <button type="submit">Retry</button>
                                </form>
                            <% } %>
                        </td>
                    </tr>
                <% } %>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('partials/footer') %>
