FROM node:20-slim
RUN apt-get update && apt-get install -y --no-install-recommends ca-certificates git git-lfs python3-pip && rm -rf /var/lib/apt/lists/*
RUN pip3 install huggingface-hub --break-system-packages
RUN ln -s $(which huggingface-cli) /usr/local/bin/hf
RUN git lfs install
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build
RUN npm prune --production
ENV NODE_ENV=production
EXPOSE 32002
CMD ["node", "dist/index.js"]
